@* LoginDisplay Component - Shows login/logout buttons based on auth state *@
@inject NavigationManager Navigation

<AuthorizeView>
    <Authorized>
        <div class="user-menu">
            <span class="user-name">Hello, @context.User.Identity?.Name</span>
            <button class="btn btn-light btn-rounded" @onclick="BeginLogout">
                <span class="material-symbols-outlined" style="font-size: 18px; margin-right: 0.25rem;">logout</span>
                Logout
            </button>
        </div>
    </Authorized>
    <NotAuthorized>
        <a href="authentication/login" class="btn btn-light btn-rounded">
            <span class="material-symbols-outlined" style="font-size: 18px; margin-right: 0.25rem;">login</span>
            Staff Login
        </a>
    </NotAuthorized>
</AuthorizeView>

@code {
    private void BeginLogout()
    {
        Navigation.NavigateToLogout("authentication/logout");
    }
}
