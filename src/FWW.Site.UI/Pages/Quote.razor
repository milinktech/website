@page "/quote"

<PageTitle>Request a Quote - FOCUS Logistics</PageTitle>

<!-- Main Content -->
<div class="section">
    <div style="max-width: 56rem; margin: 0 auto;">
        <!-- Page Header -->
        <div style="margin-bottom: 2rem;">
            <h1 style="font-size: 3rem; font-weight: var(--font-weight-black); margin-bottom: 1rem;">Request a Free Quote</h1>
            <p style="font-size: 1.125rem; color: var(--color-text-gray-light);">Fill in the details below and our team will get back to you with a competitive quote as soon as possible.</p>
        </div>

        <!-- Progress Indicator -->
        <div style="margin-bottom: 2rem;">
            <div style="display: flex; justify-content: space-between; align-items: center; font-size: 0.875rem; font-weight: var(--font-weight-medium); margin-bottom: 0.5rem; color: var(--color-text-gray-light);">
                <p><span style="font-weight: var(--font-weight-bold); color: var(--color-text-light);">Step 1 of 3:</span> Service Details</p>
                <p>Cargo Info</p>
                <p>Contact Info</p>
            </div>
            <div style="width: 100%; height: 0.5rem; background-color: var(--color-border-light); border-radius: var(--radius-full);">
                <div style="width: 15%; height: 100%; background-color: var(--color-primary); border-radius: var(--radius-full);"></div>
            </div>
        </div>

        <EditForm Model="@quoteForm" OnValidSubmit="@HandleSubmit">
            <!-- Service Details Section -->
            <div class="card" style="padding: 2rem; margin-bottom: 2rem;">
                <h2 style="font-size: 1.5rem; font-weight: var(--font-weight-bold); margin-bottom: 1.5rem;">Service Details</h2>
                <div class="grid grid-cols-1 grid-cols-2-md" style="gap: 1.5rem;">
                    <div class="form-group">
                        <label class="form-label">Service Type</label>
                        <InputSelect class="form-select" @bind-Value="quoteForm.ServiceType">
                            <option value="">Select service type</option>
                            <option value="air">Air Freight</option>
                            <option value="ocean">Ocean Freight</option>
                            <option value="land">Land Transport</option>
                            <option value="customs">Customs Brokerage</option>
                        </InputSelect>
                    </div>
                    <div class="form-group">
                        <label class="form-label">Preferred Shipping Date</label>
                        <InputDate class="form-input" @bind-Value="quoteForm.ShippingDate" />
                    </div>
                    <div class="form-group">
                        <label class="form-label">Origin</label>
                        <InputText class="form-input" @bind-Value="quoteForm.Origin" placeholder="City, Country" />
                    </div>
                    <div class="form-group">
                        <label class="form-label">Destination</label>
                        <InputText class="form-input" @bind-Value="quoteForm.Destination" placeholder="City, Country" />
                    </div>
                </div>
            </div>

            <!-- Cargo Information Section -->
            <div class="card" style="padding: 2rem; margin-bottom: 2rem;">
                <h2 style="font-size: 1.5rem; font-weight: var(--font-weight-bold); margin-bottom: 1.5rem;">Cargo Information</h2>
                <div class="grid grid-cols-1 grid-cols-2-md" style="gap: 1.5rem;">
                    <div class="form-group" style="grid-column: span 2 / span 2;">
                        <label class="form-label">Description of Goods</label>
                        <InputText class="form-input" @bind-Value="quoteForm.GoodsDescription" placeholder="e.g., Electronics, Apparel, Machinery Parts" />
                    </div>
                    <div class="form-group">
                        <label class="form-label">Total Weight (kg)</label>
                        <InputNumber class="form-input" @bind-Value="quoteForm.Weight" placeholder="0.00" />
                    </div>
                    <div class="grid grid-cols-1 grid-cols-3-md" style="gap: 1rem; grid-column: span 1 / span 1;">
                        <div class="form-group">
                            <label class="form-label">L (cm)</label>
                            <InputNumber class="form-input" @bind-Value="quoteForm.Length" placeholder="0" />
                        </div>
                        <div class="form-group">
                            <label class="form-label">W (cm)</label>
                            <InputNumber class="form-input" @bind-Value="quoteForm.Width" placeholder="0" />
                        </div>
                        <div class="form-group">
                            <label class="form-label">H (cm)</label>
                            <InputNumber class="form-input" @bind-Value="quoteForm.Height" placeholder="0" />
                        </div>
                    </div>
                    <div class="form-group" style="grid-column: span 2 / span 2;">
                        <label class="form-label">Is the cargo hazardous?</label>
                        <div style="display: flex; gap: 1.5rem; margin-top: 0.5rem;">
                            <label style="display: flex; align-items: center; gap: 0.5rem; cursor: pointer;">
                                <InputRadioGroup @bind-Value="quoteForm.IsHazardous">
                                    <InputRadio Value="true" style="width: 1rem; height: 1rem; cursor: pointer;" />
                                </InputRadioGroup>
                                <span>Yes</span>
                            </label>
                            <label style="display: flex; align-items: center; gap: 0.5rem; cursor: pointer;">
                                <InputRadioGroup @bind-Value="quoteForm.IsHazardous">
                                    <InputRadio Value="false" style="width: 1rem; height: 1rem; cursor: pointer;" />
                                </InputRadioGroup>
                                <span>No</span>
                            </label>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Contact Information Section -->
            <div class="card" style="padding: 2rem; margin-bottom: 2rem;">
                <h2 style="font-size: 1.5rem; font-weight: var(--font-weight-bold); margin-bottom: 1.5rem;">Your Contact Information</h2>
                <div class="grid grid-cols-1 grid-cols-2-md" style="gap: 1.5rem;">
                    <div class="form-group">
                        <label class="form-label">Full Name</label>
                        <InputText class="form-input" @bind-Value="quoteForm.FullName" placeholder="John Doe" />
                    </div>
                    <div class="form-group">
                        <label class="form-label">Email Address</label>
                        <InputText type="email" class="form-input" @bind-Value="quoteForm.Email" placeholder="you@company.com" />
                    </div>
                    <div class="form-group">
                        <label class="form-label">Phone Number</label>
                        <InputText type="tel" class="form-input" @bind-Value="quoteForm.Phone" placeholder="+1 (555) 000-0000" />
                    </div>
                    <div class="form-group">
                        <label class="form-label">Company Name (Optional)</label>
                        <InputText class="form-input" @bind-Value="quoteForm.Company" placeholder="Your Company Inc." />
                    </div>
                    <div class="form-group" style="grid-column: span 2 / span 2;">
                        <label class="form-label">Additional Information</label>
                        <InputTextArea class="form-textarea" @bind-Value="quoteForm.AdditionalInfo" placeholder="Any special instructions or details about your shipment..." rows="4" />
                    </div>
                </div>
            </div>

            <!-- Submit Button -->
            <div style="text-align: center;">
                <button type="submit" class="btn btn-primary btn-large" style="min-width: 200px; height: 3.5rem; font-size: 1.125rem; box-shadow: 0 10px 15px -3px rgba(13, 89, 242, 0.3);">Get My Free Quote</button>
                <p style="font-size: 0.75rem; color: var(--color-text-gray-light); margin-top: 1rem;">By submitting, you agree to our <a href="#" style="text-decoration: underline;">Terms of Service</a> and <a href="#" style="text-decoration: underline;">Privacy Policy</a>.</p>
            </div>
        </EditForm>
    </div>
</div>

@code {
    private QuoteFormModel quoteForm = new();

    private void HandleSubmit()
    {
        // Handle form submission
        Console.WriteLine($"Quote form submitted: {quoteForm.FullName}");
        // Reset form
        quoteForm = new();
    }

    private class QuoteFormModel
    {
        public string ServiceType { get; set; } = "";
        public DateTime? ShippingDate { get; set; }
        public string Origin { get; set; } = "";
        public string Destination { get; set; } = "";
        public string GoodsDescription { get; set; } = "";
        public decimal? Weight { get; set; }
        public decimal? Length { get; set; }
        public decimal? Width { get; set; }
        public decimal? Height { get; set; }
        public bool IsHazardous { get; set; } = false;
        public string FullName { get; set; } = "";
        public string Email { get; set; } = "";
        public string Phone { get; set; } = "";
        public string Company { get; set; } = "";
        public string AdditionalInfo { get; set; } = "";
    }
}
