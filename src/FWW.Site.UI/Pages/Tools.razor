@page "/tools"

<PageTitle>Logistics Tools - FOCUS</PageTitle>

<!-- Hero Section -->
<section class="hero" style="min-height: 320px; background: linear-gradient(135deg, var(--color-primary-dark) 0%, var(--color-primary) 100%);">
    <div class="hero-content">
        <h1 class="hero-title">Logistics Calculator Tools</h1>
        <p class="hero-subtitle">Free online tools to help you calculate shipping dimensions, weights, and volumes for your logistics needs.</p>
    </div>
</section>

<!-- Unit Converter Section -->
<section class="section">
    <div class="section-container">
        <UnitConverter />
    </div>
</section>

<!-- Other Tools Coming Soon -->
<section class="section section-bg-gray">
    <div class="section-container" style="text-align: center;">
        <h2 class="section-title">More Tools Coming Soon</h2>
        <div class="grid grid-cols-1 grid-cols-3-md" style="gap: 2rem; max-width: 900px; margin: 0 auto;">
            <div class="card" style="opacity: 0.6;">
                <div class="card-icon">
                    <span class="material-symbols-outlined">currency_exchange</span>
                </div>
                <h3 class="card-title">Shipping Cost Estimator</h3>
                <p class="card-description">Get quick estimates for shipping costs.</p>
            </div>
            <div class="card" style="opacity: 0.6;">
                <div class="card-icon">
                    <span class="material-symbols-outlined">schedule</span>
                </div>
                <h3 class="card-title">Transit Time Calculator</h3>
                <p class="card-description">Estimate delivery times for different routes.</p>
            </div>
            <div class="card" style="opacity: 0.6;">
                <div class="card-icon">
                    <span class="material-symbols-outlined">inventory_2</span>
                </div>
                <h3 class="card-title">Container Load Planner</h3>
                <p class="card-description">Plan optimal container loading.</p>
            </div>
        </div>
    </div>
</section>
